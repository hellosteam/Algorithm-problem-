#include<iostream>
#include<cmath>
using namespace std;
double f(double x)
{
	return exp(x)/(1+x*x);
}
	const double eps=1e-8;
int main()
{
	int n=1;
	double a=0,b=1;
	double h,In,Tn,I2n,T2n;
	h=b-a;
	I2n=T2n=h*(f(a)+f(b))/2;
	In=0;
	while(abs(I2n-In)>=eps)
	{
		Tn=T2n;
		In=I2n;
		double sigma=0.0;
		for(int k=0;k<n;k++)
		{
			double x=a+(k+0.5)*h;
			sigma+=f(x);
		}
		T2n=(Tn+h*sigma)/2.0;
		I2n=(4*T2n-Tn)/3.0;
		n*=2;
		h/=2;
	}
	printf("%.8lf ",I2n);
	return 0;
}
